{
  "name": "snapmap",
  "version": "0.0.1",
  "description": "easy GUI editor for Tangram",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "gulp serve",
    "test": "npm run lint --silent && npm run karma --silent",
    "lint": "npm run lint-js --silent && npm run lint-css --silent",
    "lint-js": "eslint *.js src/ test/",
    "lint-css": "stylelint src/css/*.css",
    "karma": "./node_modules/karma/bin/karma start",
    "postinstall": "modernizr -c modernizr-config.json -d build/js; gulp build",
    "make-thumbnails": "node meta/make-scene-thumbnails.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tangrams/snapmap.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tangrams/snapmap/issues"
  },
  "homepage": "https://github.com/tangrams/snapmap",
  "contributors": [
    {
      "name": "Patricio Gonzalez Vivo",
      "email": "patricio@mapzen.com"
    }
  ],
  "devDependencies": {
    "autoprefixer": "6.3.6",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babelify": "7.3.0",
    "brfs": "1.4.3",
    "browser-sync": "2.12.5",
    "browserify": "13.0.0",
    "browserify-shim": "3.8.12",
    "csswring": "4.2.2",
    "eslint": "2.10.2",
    "eslint-plugin-react": "5.1.1",
    "gm": "1.22.0",
    "gulp": "3.9.1",
    "gulp-babel": "6.1.2",
    "gulp-notify": "2.2.0",
    "gulp-postcss": "6.1.0",
    "gulp-sourcemaps": "1.6.0",
    "gulp-uglify": "1.5.3",
    "gulp-util": "3.0.7",
    "loose-envify": "1.2.0",
    "modernizr": "3.3.1",
    "postcss-color-hex-alpha": "2.0.0",
    "postcss-custom-properties": "5.0.0",
    "postcss-import": "8.1.0",
    "postcss-nested": "1.0.0",
    "postcss-reporter": "1.3.3",
    "stylelint": "6.5.1",
    "stylelint-config-standard": "8.0.0",
    "vinyl-buffer": "1.0.0",
    "vinyl-source-stream": "1.1.0",
    "watchify": "3.7.0"
  },
  "dependencies": {
    "js-yaml": "^3.6.1",
    "leaflet": "1.0.0-rc.1",
    "leaflet-hash": "0.2.1",
    "react": "^0.14.8",
    "react-bootstrap": "^0.29.4",
    "react-burger-menu": "^1.9.8",
    "react-color": "^2.2.2",
    "react-dom": "^0.14.8",
    "whatwg-fetch": "^0.11.0"
  },
  "browserify-shim": {
    "tangram": "global:Tangram"
  }
}
